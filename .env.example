# Environment Configuration for SkateIQ
# Copy this file to .env and update with your values

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
APP_NAME=SkateIQ
APP_VERSION=3.0.0
ENVIRONMENT=development  # development, staging, production, testing
DEBUG=True
HOST=0.0.0.0
PORT=8001

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
# PostgreSQL connection string
DATABASE_URL=postgresql://skateiq_user:your_password@localhost:5432/skateiq

# Connection pool settings
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10
DATABASE_POOL_TIMEOUT=30

# ============================================================================
# SECURITY
# ============================================================================
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key-here

# JWT Configuration
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080  # 7 days

# ============================================================================
# OPENAI API
# ============================================================================
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o
OPENAI_MAX_TOKENS=1500
OPENAI_TEMPERATURE=0.7

# ============================================================================
# EXTERNAL APIs
# ============================================================================
NHL_API_BASE=https://api-web.nhle.com/v1
MONEYPUCK_BASE=https://moneypuck.com
API_REQUEST_TIMEOUT=15
API_MAX_RETRIES=3

# ============================================================================
# CACHING
# ============================================================================
CACHE_TTL_HOURS=6
CACHE_MAX_SIZE=1000

# ============================================================================
# RATE LIMITING
# ============================================================================
RATE_LIMIT_ENABLED=True
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# ============================================================================
# CORS CONFIGURATION
# ============================================================================
CORS_ORIGINS=*
CORS_ALLOW_CREDENTIALS=True

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=logs/skateiq.log

# ============================================================================
# LIVE SCORES & SCRAPING
# ============================================================================
LIVE_SCORE_UPDATE_INTERVAL=30
LIVE_SCORE_ENABLED=True
SCRAPER_RUN_TIME=02:00
SCRAPER_ENABLED=True
